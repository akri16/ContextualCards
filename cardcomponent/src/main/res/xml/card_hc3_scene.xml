<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/dismiss_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toTopOf="@+id/remind_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/remind_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/dismiss_btn"
            app:layout_constraintStart_toStartOf="@+id/dismiss_btn"
            app:layout_constraintTop_toBottomOf="@+id/dismiss_btn" />

        <Constraint
            android:id="@+id/fg_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:translationX="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:motionInterpolator="easeInOut"
        app:duration="@integer/material_motion_duration_medium_1"
        app:layoutDuringTransition="ignoreRequest">

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="40"
                app:motionTarget="@id/dismiss_btn"/>

            <KeyAttribute
                android:alpha="0"
                app:framePosition="40"
                app:motionTarget="@id/remind_btn"/>
        </KeyFrameSet>

    </Transition>
</MotionScene>
